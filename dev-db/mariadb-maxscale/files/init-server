depend() {
	need net
}

start() {
       ebegin "Starting Maxscale"
       start-stop-daemon --start --pidfile ${MAXSCALE_HOME}/log/maxscale.pid --user ${MAXSCALE_USER} --chdir ${MAXSCALE_HOME} \
       --name maxscale --wait 10000 ${MAXSCALE_DAEMON}
       eend $?
}

stop() {
      ebegin "Stoping Maxscale"
      start-stop-daemon --stop --pidfile ${MAXSCALE_HOME}/log/maxscale.pid --name maxscale
      eend $?
}
